@model IPagedList<BlogPost>


<main class="mt-5 pt-5">
    <div class="container">

        <!--Section: Jumbotron-->
        <section class="card wow fadeIn" style="background-image: url('../../Images/Fish_tank_.jpg')";>


            <!-- Content -->
            <div class="card-body text-white text-center py-5 px-5 my-5">

                <h1 class="mb-4">
                    <strong>The Fish Tank</strong>
                </h1>
                <p>
                    <strong>A look into the head of Fish</strong>
                </p>
                <p class="mb-4">
                    <strong>
                        Learning Software Development
