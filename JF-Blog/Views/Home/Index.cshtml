            </div>
            <!-- Content -->
        </section>
        <!--Section: Jumbotron-->

        <hr class="my-5">

        <!--Section: Cards-->
        <section class="text-center">

            <!--Grid row-->
            <div class="row mb-4 wow fadeIn">
               

                @foreach (var blogPosts in Model.ToList().OrderByDescending(c => c.Created))
                {

                   
                    <div class="col">

                        <!--Card-->
                        <div class="card">

                            <!--Card image-->
                            <div class="view overlay">
                                @if (blogPosts.ImagePath != null)
                                {
                                    <img style="width:100%" src="@blogPosts.ImagePath" alt="Image Not Availiable" />
                                }
                                <div class="mask rgba-white-slight"></div>                                
                            </div>

                            <!--Card content-->
                            <div class="card-body">
                                <!--Title-->
                                <h4 class="card-title">@blogPosts.Title</h4>
                                <!--Text-->
                                <p class="card-text">
                                    @blogPosts.Abstract
                                </p>

                                @Html.ActionLink("View Post", "Details", "BlogPosts", new { slug = (string)blogPosts.Slug }, new { @class = "btn btn-primary btn-sm" })

                            </div>

                        </div>
                        <!--/.Card-->

                    </div>
                }
                <!--Grid column-->
                <!--Grid column-->


            </div>
            <!--Grid row-->
            <!--Pagination-->
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount@Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchStr = ViewBag.Search }));



